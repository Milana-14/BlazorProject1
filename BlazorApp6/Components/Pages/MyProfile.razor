@page "/my-profile"
@inject NavigationManager Navigation
@inject AppState AppState
@inject StudentManager StudentManager
@rendermode InteractiveServer

<h3>Мой профил</h3>

@if (student == null)
{
    <p>Моля, влезте в профила си</p>
}
else if (student is not null)
{
    @if (!isEditing)
    {
        <p><strong>Име:</strong> @student.FirstName</p>
        <p><strong>Фамилия:</strong> @student.SecName</p>
        <p><strong>Възраст:</strong> @student.Age</p>
        <p><strong>Клас:</strong> @student.Grade</p>
        <p><strong>Имейл:</strong> @student.Email</p>
        <p><strong>Телефон:</strong> @student.PhoneNumber</p>

        <p><strong>Може да помогне с:</strong> @string.Join(", ", student.CanHelpWith.Select(s => s.GetDisplayName()))</p>
        <p><strong>Нуждае се от помощ по:</strong> @string.Join(", ", student.NeedsHelpWith.Select(s => s.GetDisplayName()))</p>

        <button class="btn btn-primary" @onclick="() => isEditing = true">Редактиране</button>
        <button class="btn btn-secondary" @onclick="ExitProfile">Изход</button>
    }
    else
    {
        <EditForm Model="@student" OnValidSubmit="SaveChanges">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label>Име:</label>
                <InputText class="form-control" @bind-Value="student.FirstName" />
            </div>

            <div class="mb-3">
                <label>Фамилия:</label>
                <InputText class="form-control" @bind-Value="student.SecName" />
            </div>

            <div class="mb-3">
                <label>Възраст:</label>
                <InputNumber class="form-control" @bind-Value="student.Age" />
            </div>

            <div class="mb-3">
                <label>Клас:</label>
                <InputNumber class="form-control" @bind-Value="student.Grade" />
            </div>

            <div class="mb-3">
                <label>Имейл:</label>
                <InputText class="form-control" @bind-Value="student.Email" />
            </div>

            <div class="mb-3">
                <label>Телефон:</label>
                <InputText class="form-control" @bind-Value="student.PhoneNumber" />
            </div>

            <div class="filter-row">
                <h5>Мога да помогна с:</h5>
                <div class="checkbox-group">
                    @foreach (var subject in allSubjects)
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   checked="@student.CanHelpWith.Contains(subject)"
                                   @onchange="e => ToggleSubject(subject, e.Value is true, student.CanHelpWith, student.NeedsHelpWith)" />
                            @subject.GetDisplayName()
                        </div>
                    }
                </div>
            </div>

            <div class="filter-row">
                <h5>Нуждая се от помощ по:</h5>
                <div class="checkbox-group">
                    @foreach (var subject in allSubjects)
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   checked="@student.NeedsHelpWith.Contains(subject)"
                                   @onchange="e => ToggleSubject(subject, e.Value is true, student.NeedsHelpWith, student.CanHelpWith)" />
                            @subject.GetDisplayName()
                        </div>
                    }
                </div>
            </div>
            <button type="button" class="btn btn-success" @onclick="GoToChangePassword">Промени паролата</button>

            <button type="button" class="btn btn-success" @onclick="CancelEdit">Отказ</button>
            <button type="submit" class="btn btn-success">Запазване на промените</button>
        </EditForm>
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-success mt-3">@errorMessage</div>
    }

    @if (successMessageShown)
    {
        <div class="alert alert-success mt-3">Промените са запазени!</div>
    }
}


@code {
    private Student? student;
    private List<Subject> allSubjects = new List<Subject>();
    private bool successMessageShown = false;
    private string errorMessage = string.Empty;
    private bool isEditing = false;

    protected override void OnInitialized()
    {
        student = AppState.CurrentUser;

        isEditing = false;

        allSubjects = Enum.GetValues(typeof(Subject)).Cast<Subject>().Where(s => s != Subject.NotSpecified).ToList();
    }

    private void ToggleSubject(Subject subject, bool isChecked, HashSet<Subject> targetList, HashSet<Subject> otherList)
    {
        if (isChecked)
        {
            if (otherList.Contains(subject))
                otherList.Remove(subject);

            if (!targetList.Contains(subject))
                targetList.Add(subject);
        }
        else
        {
            if (targetList.Contains(subject))
                targetList.Remove(subject);
        }
    }

    private void GoToChangePassword()
    {
        Navigation.NavigateTo("/change-password");
    }

    private void SaveChanges()
    {
        if (student is not null)
        {
            try
            {
                StudentManager.UpdateStudent(student);
                isEditing = false;
                successMessageShown = true;
            }
            catch (Exception ex)
            {
                errorMessage = ex.ToString();
            }
        }
    }
    private void CancelEdit()
    {
        student = AppState.CurrentUser;
        isEditing = false;
        successMessageShown = false;
    }

    private void ExitProfile()
    {
        AppState.CurrentUser = null;
        Navigation.NavigateTo("/login");
    }
}

<style>
    

    .checkbox-group {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        flex: 1 1 auto;
    }

        .checkbox-group > div {
            flex: 0 0 auto;
            min-width: 45px;
        }

    .form-check-label {
        user-select: none;
        font-size: 0.9rem;
        white-space: nowrap;
    }
</style>