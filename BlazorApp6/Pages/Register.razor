@page "/register" // страница за регистрация на нов ученик
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject StudentManager StudentManager

<h3>Регистрация</h3>

<EditForm Model="@registeredStudent" OnValidSubmit="Submit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Име:</label>
        <InputText class="form-control" @bind-Value="registeredStudent.FirstName" />
    </div>

    <div class="mb-3">
        <label>Фамилия:</label>
        <InputText class="form-control" @bind-Value="registeredStudent.SecName" />
    </div>

    <div class="mb-3">
        <label>Възраст:</label>
        <InputNumber class="form-control" @bind-Value="registeredStudent.Age" />
    </div>

    <div class="mb-3">
        <label>Клас:</label>
        <InputNumber class="form-control" @bind-Value="registeredStudent.Grade" />
    </div>

    <div class="mb-3">
        <label>Имейл:</label>
        <InputText class="form-control" @bind-Value="registeredStudent.Email" />
    </div>

    <div class="mb-3">
        <label>Телефон:</label>
        <InputText class="form-control" @bind-Value="registeredStudent.PhoneNumber" />
    </div>

    <div class="mb-3">
        <label>Потребителско име:</label>
        <InputText class="form-control" @bind-Value="registeredStudent.Username" />
    </div>

    <div class="mb-3">
        <label>Парола:</label>
        <InputText class="form-control" @bind-Value="registeredStudent.Password" />
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Регистрирай се</button>
    </div>
</EditForm>

@if (registeredSuccessfully)
{
    <div class="alert alert-success mt-3">
        Добре дошъл, @registeredStudent.FirstName! Възраст: @registeredStudent.Age, Клас: @registeredStudent.Grade.
    </div>
}

@if (alreadyExists)
{
    <div class="alert alert-danger mt-3">
        Ученик с това потребителско име вече съществува.
    </div>
}

@if (!string.IsNullOrEmpty(StudentManager.DbError))
{
    <div class="alert alert-danger mt-3">
        Грешка при зареждането на данните: @StudentManager.DbError
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger mt-3">@errorMessage</div>
}

@code {
    private Student? registeredStudent = new Student();

    private bool alreadyExists = false;
    private string errorMessage = string.Empty;
    private bool registeredSuccessfully = false;

    private void Submit()
    {
        try
        {
            if (StudentManager.FindStudent(s => s.Username == registeredStudent.Username) != null)
            {
                registeredSuccessfully = false;
                alreadyExists = true;
                registeredStudent = new Student();
                return;
            }

            Student newStudent = new Student(
                registeredStudent.FirstName,
                registeredStudent.SecName,
                registeredStudent.Age,
                registeredStudent.Email,
                registeredStudent.PhoneNumber,
                registeredStudent.Username,
                registeredStudent.Password,
                registeredStudent.Grade
            );

            StudentManager.AddStudent(newStudent);
            registeredSuccessfully = true;
            errorMessage = string.Empty;
            alreadyExists = false;
        }
        catch (ApplicationException ex)
        {
            errorMessage = ex.Message;
            registeredStudent = null;
        }
    }
}  