@using BlazorApp6.Models
@inject StudentManager StudentManager

@if (IsOpen)
{
    <div class="modal-backdrop">
        <div class="modal-content">
            <div class="d-flex align-items-center gap-3 mb-3">
                <img src="@StudentManager.GetAvatarUrl(student)" alt="Avatar"
                     class="rounded-circle avatar-lg" />
                <div>
                    <h4 class="fw-semibold mb-1">@student.FirstName @student.SecName</h4>
                    <p class="text-muted small mb-0">Клас: @student.Grade</p>
                </div>
            </div>

            @* Списък с предмети *@
            @if (isRequiringHelp)
            {
                <p class="text small mb-2 fw-semibold">Може да помогне с:</p>
                <div class="match-subjects-scroll mb-2">
                    @foreach (var subj in student.CanHelpWith.Where(s => s != SubjectEnum.NotSpecified))
                    {
                        <span class="badge rounded-pill px-3 py-1 me-2 badge-match">@subj.GetDisplayName()</span>
                    }
                </div>
            }
            else
            {
                <p class="text small mb-2 fw-semibold">Търси помощ по:</p>
                <div class="match-subjects-scroll mb-2">
                    @foreach (var subj in student.NeedsHelpWith.Where(s => s != SubjectEnum.NotSpecified))
                    {
                        <span class="badge rounded-pill px-3 py-1 me-2 badge-match">@subj.GetDisplayName()</span>
                    }
                </div>
            }

            <hr />

            <label for="subjectSelect" class="form-label">Выбери предмет</label>
            <select id="subjectSelect" class="form-select" @bind="SelectedSubject">
                <option value="@SubjectEnum.NotSpecified">-- Выбери --</option>
                @foreach (var subj in ((isRequiringHelp)
                            ? student.NeedsHelpWith.Where(s => otherStudent.CanHelpWith.Contains(s))
                            : student.CanHelpWith.Where(s => otherStudent.NeedsHelpWith.Contains(s)))
                            .Where(s => s != SubjectEnum.NotSpecified))
                {
                    <option value="@subj">@subj.GetDisplayName()</option>
                }
            </select>

            <div class="modal-actions mt-3">
                <button class="btn btn-primary" disabled="@( !isChosen )" @onclick="SendRequest">Изпрати заявка</button>
                <button class="btn btn-secondary" @onclick="Cancel">Назад</button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public EventCallback<SubjectEnum?> OnClose { get; set; }

    [Parameter] public Student student { get; set; } = default!;
    [Parameter] public Student otherStudent { get; set; } = default!;
    [Parameter] public bool isRequiringHelp { get; set; }

    private SubjectEnum SelectedSubject { get; set; } = SubjectEnum.NotSpecified;
    private bool isChosen => SelectedSubject != SubjectEnum.NotSpecified;

    private async Task SendRequest()
    {
        await OnClose.InvokeAsync(SelectedSubject);
        SelectedSubject = SubjectEnum.NotSpecified;
    }

    private async Task Cancel()
    {
        await OnClose.InvokeAsync(null);
        SelectedSubject = SubjectEnum.NotSpecified;
    }
}

<style>
    .modal-backdrop {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0,0,0,0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .modal-content {
        background: white;
        padding: 20px;
        border-radius: 10px;
        min-width: 350px;
        max-width: 500px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

    .modal-actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    .badge-match {
        background-color: #e6f0ff;
        color: #003366;
        font-weight: 600;
    }

</style>