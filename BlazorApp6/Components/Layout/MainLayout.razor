@inherits LayoutComponentBase
@inject NavigationManager NavigationManager
@inject Microsoft.AspNetCore.Components.Authorization.AuthenticationStateProvider AuthStateProvider
@inject StudentManager StudentManager
@implements IDisposable

<div class="app-layout">
    @if (currentStudent == null && !(userChecked ?? false))
    {
        <p>Загрузка профиля...</p>
    }
    else
    {
        @if (IsHistorySwapsMode)
        {
            <div class="swaps-header-wrapper @(IsFullSidebarActive ? "full" : "collapsed-swaps")">
                <div class="swaps-logo">EduSwaps</div>
            </div>

            <CollapsedSidebar CurrentStudentId="@(currentStudent?.Id ?? Guid.Empty)" />
            <HistorySwapsSidebar CurrentStudentId="@(CurrentStudentId)" />
        }
        else if (IsSwapsMode)
        {
            <div class="swaps-header-wrapper @(IsFullSidebarActive ? "full" : "collapsed-swaps")">
                <div class="swaps-logo">EduSwaps</div>
            </div>

            <CollapsedSidebar CurrentStudentId="@(currentStudent?.Id ?? Guid.Empty)" />
            <SwapsSidebar CurrentStudentId="@(CurrentStudentId)" />
        }
        else
        {
            <NavMenu CurrentStudentId="@(currentStudent?.Id ?? Guid.Empty)" />
        }

        <main class="main-content">
            @Body
        </main>
    }
</div>

@code {
    private bool IsSwapsMode;
    private bool IsHistorySwapsMode;
    private Guid CurrentStudentId;
    private Student? currentStudent;
    private bool? userChecked = false;
    private bool IsFullSidebarActive => !IsSwapsMode && !IsHistorySwapsMode;

    protected override async Task OnInitializedAsync()
    {
        var state = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = state.User;

        if (user.Identity?.IsAuthenticated ?? false)
        {
            var username = user.Identity.Name;
            currentStudent = await StudentManager.FindStudentByUsername(username);
            CurrentStudentId = currentStudent?.Id ?? Guid.Empty;
        }

        userChecked = true;
        CheckRoute();
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object sender, LocationChangedEventArgs e)
    {
        CheckRoute();
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }

    private void CheckRoute()
    {
        IsSwapsMode = NavigationManager.Uri.Contains("/my-swaps")
                      || NavigationManager.Uri.Contains("/chat")
                      || NavigationManager.Uri.Contains("/ai-chat");

        IsHistorySwapsMode = NavigationManager.Uri.Contains("/chat-history");
    }
}